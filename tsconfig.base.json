{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es2019",
    "module": "esnext",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@orca/components": ["libs/components/src/index.ts"],
      "@orca/graphql": ["libs/graphql/src/index.ts"],
      "@orca/hooks": ["libs/hooks/src/index.ts"],
      "@orca/layouts": ["libs/layouts/src/index.ts"],
      "@orca/pages/app": ["libs/pages/app/src/index.ts"],
      "@orca/pages/create-vault": ["libs/pages/create-vault/src/index.ts"],
      "@orca/pages/error": ["libs/pages/error/src/index.ts"],
      "@orca/pages/exchange": ["libs/pages/exchange/src/index.ts"],
      "@orca/pages/landing": ["libs/pages/landing/src/index.ts"],
      "@orca/pages/manage-vault": ["libs/pages/manage-vault/src/index.ts"],
      "@orca/pages/monitor": ["libs/pages/monitor/src/index.ts"],
      "@orca/pages/stake": ["libs/pages/stake/src/index.ts"],
      "@orca/pages/vaults": ["libs/pages/vaults/src/index.ts"],
      "@orca/pages/yield": ["libs/pages/yield/src/index.ts"],
      "@orca/shared/base": ["libs/shared/base/src/index.ts"],
      "@orca/shared/contracts": ["libs/shared/contracts/src/index.ts"],
      "@orca/shared/deployments": ["libs/shared/deployments/src/index.ts"],
      "@orca/shared/funcs": ["libs/shared/funcs/src/index.ts"],
      "@orca/shared/styles": ["libs/shared/styles/src/index.ts"],
      "@orca/util": ["libs/util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["./scripts", "./deploy", "./test", "./tools"]
}
